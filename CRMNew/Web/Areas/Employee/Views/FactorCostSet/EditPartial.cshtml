@{
    Layout = null;
}
@model Web.Areas.Employee.Models.ViewModels.FactorCostSetViewModels.Edit
<div class="box box-info">
    <div class="box-header ui-sortable-handle" style="cursor: move;">
        <i class="fa "></i>

        <h3 class="box-title">ویرایش</h3>
        <!-- tools box -->
        <div class="pull-left box-tools">
            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                <i class="fa fa-times"></i>
            </button>
            @* re write code *@
            <button type="button" class="btn bg-teal btn-sm" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /. tools -->
    </div>
    <div class="box-body">
        <form action="/Employee/FactorCostSet/Edit" method="post">
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.id" />
            <div class="form-group">
                <label class="control-label">نام هزینه</label>
                @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">افزایشی</label>
                @Html.RadioButtonFor(m => m.isIncrese, "True")
                <label class="control-label">کاهشی</label>
                @Html.RadioButtonFor(m => m.isIncrese, "False")
            </div>
            <div class="form-group">
                <label class="control-label">درصدی</label>
                @Html.RadioButtonFor(m => m.isPresent, "True")
                <label class="control-label">عددی</label>
                @Html.RadioButtonFor(m => m.isPresent, "False")
            </div>
            <div class="form-group">
                <label class="control-label">در ردیف فاکتور</label>
                @Html.RadioButtonFor(m => m.isInItem, "True")
                <label class="control-label">در کل فاکتور</label>
                @Html.RadioButtonFor(m => m.isInItem, "False")
            </div>
            <div class="form-group">
                <label class="control-label">در فی کالا</label>
                @Html.RadioButtonFor(m => m.isInFee, "True")
                <label class="control-label">روی قیمت کل</label>
                @Html.RadioButtonFor(m => m.isInFee, "False")
            </div>
            <div class="form-group">
                <label class="control-label">نمایش به کاربر</label>
                @Html.CheckBoxFor(m => m.isShowCustomer)
            </div>
            <div class="form-group pull-left">
                <label class="control-label">فعال</label>
                @Html.CheckBoxFor(m => m.isEnable)
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات</label>
                @Html.TextAreaFor(m => m.description, new { @class = "form-control" })
            </div>
            <button id="btnSubmit" class="btn btn-success">ثبت</button>
        </form>
    </div>
</div>