@{
    Layout = null;
}


@model Web.Areas.Employee.Models.ViewModels.SiteValuesViewModels.EditDiscount
<div class="box box-info">
    <div class="box-header ui-sortable-handle" style="cursor: move;">
        <i class="fa "></i>

        <h3 class="box-title">ویرایش تخفیف</h3>
        <!-- tools box -->
        <div class="pull-left box-tools">
            <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                <i class="fa fa-times"></i>
            </button>
            @* re write code *@
            <button type="button" class="btn bg-teal btn-sm" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /. tools -->
    </div>
    <div class="box-body">
        <div class="col-md-offset-4 col-md-4 col-md-offset-4 ">
            <form action="/Employee/SiteValues/EditDiscount" method="post">
                <input type="hidden" value="@Model.oldJson" name="oldJson"/>
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-group pull-left">
                        <label class="control-label">کم تر</label>
                        @Html.TextBoxFor(m => m.left, new {@class = "form-control", type = "number", min = "0", step = "0.1"})
                    </div>
                    <div class="form-group pull-left">
                        <label class="control-label">></label>

                    </div>
                    <div class="form-group pull-left">
                        <label class="control-label">بیشتر</label>
                        @Html.TextBoxFor(m => m.right, new {@class = "form-control", type = "number", min = "0", step = "0.1"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">درصد پورسانت</label>
                    @Html.TextBoxFor(m => m.value, new {@class = "form-control", type = "number", min = "0", step = "0.1"})
                </div>
                <button class="btn btn-success">ثبت</button>
            </form>
        </div>
    </div>
    <div class="box-footer clearfix" style="">
    </div>
</div>

