@model IEnumerable<Models.ApplicationUser>

@{
    ViewBag.Title = "";
}

<div class="box box-primary">
    <div class="box-header">
        <span class="box-title">
            <i class="fas fa-users"></i>
            لیست کارمندان
        </span>
    </div>
    <div class="box-body">


        <p>
            <a href="/account/register" class="btn btn-sm btn-success">
                @*@Html.ActionLink("Create New", "Create")*@
                <i class="fa fa-plus-circle">
                </i>
                جدید
            </a>
        </p>
        <table class="table table-responsive table-striped table-hover">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.UserName)*@
                    نام کاربری
                </th>
                <th>
                    عملیات
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        <a class="btn btn-danger btn-xs " href="/UsersAdmin/Edit/@item.Id">
                            <i class="fas fa-user-times"></i>
                            نقش
                        </a>
                        <a class="btn btn-danger btn-xs " href="/UsersAdmin/Delete/@item.Id">
                            <i class="fas fa-user-times"></i>
                            حذف

                        </a>
                        @Html.ActionLink("Permission", "Permission", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
